    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch bot-billy",
            "request": "launch",
            "windows": {
                "runtimeArgs": [
                    "run",
                    "bot-windows"
                ]
            },
            "linux": {
                "runtimeArgs": [
                    "run",
                    "bot-unix"
                ]
            },
            "osx": {
                "runtimeArgs": [
                    "run",
                    "bot-unix"
                ]
            },
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}